@model List<KlinikTuru>

    <div class="container">

        <div class="row pt-3 pb-4">
            <div>
            <h1>Klinikler </h1>
            </div>
        </div>

        <table class="table table-bordered">
            <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Klinik türü
                </th>
                <th>
                </th>
                <th>
                </th>
            </tr>

            </thead>

            <tbody>
                @foreach(var KlinikTuru in Model)
                {
                    <tr>
                        <td>@KlinikTuru.KlinikTuruId</td>
                        <td>@KlinikTuru.Ad</td>

                        <td>
                        <a asp-controller="KlinikTuru" asp-action="KlinikGuncelle" asp-route-id="@KlinikTuru.KlinikTuruId" type="button" class="btn btn-info" style="width:200px">Güncelle</a>
                        </td>

                        <td>
                        <a asp-controller="KlinikTuru" asp-action="KlinikSil" asp-route-id="@KlinikTuru.KlinikTuruId" type="button" class="btn btn-danger" style="width:200px">Sil</a>
                        </td>

                    </tr>
                }

      


            </tbody>


        </table>

        <div class="row pt-3 pb-2">
            <div>
            <a asp-controller="KlinikTuru" asp-action="KlinikEkle" class="btn btn-success" type="button">
                Yeni Klinik Oluştur
            </a>
            </div>

        </div>

</div>
