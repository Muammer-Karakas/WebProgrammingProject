@model KlinikTuru

<form method="post">

    <input asp-for="KlinikTuruId" hidden />
    <div class="border p-3 mt-5">
        <div class="row pb-3">
            <h2 class="text-success">Klinik Güncelle</h2>

        </div>

        <div class="mb-3">
            <label asp-for="Ad" class="p-0"></label>
            <input asp-for="Ad" class="form-control" />
            <span asp-validation-for="Ad" class="text-danger"></span>

        </div>

        <button type="submit" class="btn btn-success" style="width: 200px">Klinik Güncelle</button>

        <a asp-controller="KlinikTuru" asp-action="Index" class="btn btn-success" style="width: 200px">
            Klinik Türlerine Dön
        </a>

    </div>

</form>